<div class="inner cover">

  <h3 class="cover-heading padding-top">Rails News - A collection of the latest tweets including #rails</h3>
  <!-- <h5>A collection of the latest tweets including #rails</h5> -->
  
  <div class = "row">
    <% @tweets.each do |tweet| %>
      <div class="col-md-6">
        <div class="tech-news">
          <div class="card">
            <%= twitter_parser tweet %>            
          </div>  
        </div>
      </div>
    <% end %>
  </div>
</div>

