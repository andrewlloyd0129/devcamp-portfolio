<h1>Create new Portfolio Items</h1>

<%= form_with(model: @portfolio_item, local: true) do |form| %>

 <div class="field">
   <%= form.label :title %>
   <%= form.text_field :title, id: :portfolio_body %>
 </div>

 <div class="field">
   <%= form.label :subtitle %>
   <%= form.text_field :subtitle, id: :portfolio_body %>
 </div>

 <div class="field">
   <%= form.label :body %>
   <%= form.text_area :body, id: :portfolio_body %>
 </div>

 <div class="actions">
   <%= form.submit %>
 </div>
<% end %>